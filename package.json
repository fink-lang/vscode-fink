{
  "name": "vscode-fink",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "displayName": "fink",
  "description": "VSCode syntax highlighting for fink.",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:fink-lang/vscode-fink"
  },
  "bugs": "https://github.com/fink-lang/vscode-fink/issues",
  "homepage": "https://github.com/fink-lang/vscode-fink",
  "publisher": "fink",
  "main": "./build/pkg/extension.js",
  "activationEvents": [
    "onLanguage:fink",
    "onLanguage:jsx",
    "onLanguage:jsx-attr"
  ],
  "contributes": {
    "languages": [
      {
        "id": "fink",
        "aliases": [
          "fink",
          "fink+jsx"
        ],
        "extensions": [
          ".fink",
          ".fnk"
        ],
        "firstLine": "^#!.*\\bfink",
        "configuration": "./languages/fink.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fink",
        "scopeName": "source.fink",
        "path": "./grammars/fink.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.inline.sql": "source.sql",
          "meta.embedded.block.fink": "fink",
          "meta.tag.jsx": "jsx",
          "meta.jsx.tag.termination": "jsx",
          "JSXNested": "jsx",
          "JSXAttrs": "jsx-attr"
        }
      },
      {
        "scopeName": "source.regexp.fink",
        "path": "./grammars/regex.tmLanguage.json"
      },
      {
        "scopeName": "source.jsx.fink",
        "path": "./grammars/jsx.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "fink"
      }
    ]
  },
  "scripts": {
    "default": "run clean test build",
    "cd": "run clean test build release",
    "clean": "rimraf ./build",
    "build": "run build:*",
    "build:dir": "mkdir -p ./build/pkg/",
    "build:fnk": "fnk --src ./src --out-dir build/pkg --ignore './src/**/*.test.fnk'",
    "build:files": "cp ./package.json ./README.md ./LICENSE ./build/pkg/",
    "build:grammars": "cp -r ./grammars ./build/pkg/",
    "build:languages": "cp -r ./languages ./build/pkg/",
    "test": "run jest",
    "jest": "jest --verbose --runInBand --no-cache ",
    "watch": "nodemon --watch ./src -e fnk  --exec \"npx run build\"",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@fink/cli": "^5.0.0",
    "@fink/jest": "^5.0.0",
    "@fink/loxia": "^9.0.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "jest-cli": "^26.0.0",
    "nodemon": "^2.0.3",
    "npx-run": "^2.1.2",
    "semantic-release": "^17.0.4",
    "semantic-release-vsce": "^3.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@fink/larix": "^9.0.0",
    "@fink/std-lib": "^2.0.0"
  }
}
