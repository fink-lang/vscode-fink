{
  "comments": {
    // symbol used for single line comment.
    "lineComment": "#",
    // symbols used for start and end a block comment.
    "blockComment": [ "---", "---" ]
  },

  // symbols used as brackets
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],

  // symbols that that can be used to surround a selection
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["`", "`"]
  ],

  "autoClosingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "'", "close": "'", "notIn": ["string"]},
    {"open": "\"", "close": "\"", "notIn": ["string"]},
    {"open": "`", "close": "`", "notIn": ["string"]},
    {"open": "rx/", "close": "/", "notIn": ["string"]},
    {"open": "---", "close": "---", "notIn": ["string", "comment"]}
  ],

  "autoCloseBefore": ";:.,=}])>` \n\t",

  "folding": {
    // leave blank line after block
    "offSide": true,
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  }

  // "indentationRules": {
  //   "increaseIndentPattern": "^[^\\-]+([`'\":=+<\\-/\\*]{1}\\s*)$",
  //   // TODO: this is not working to unindent empty lines
  //   "decreaseIndentPattern": "^ni$"
  // }
}