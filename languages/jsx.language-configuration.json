{
  "comments": {
    "lineComment": "#",
    "blockComment": ["{---", "---}"]
  },

  "brackets": [["{", "}"], ["[", "]"], ["(", ")"], ["<", ">"]],

  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    {"open": "<>", "close": "</>", "notIn": ["string"]}
  ],

  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["'", "'"],
    ["\"", "\""]
  ],

  "indentationRules": {
    "increaseIndentPattern": "^[^-]+([:=+<\\-/\\*]{1}\\s*)$",
    // TODO: this is not working to unindent empty lines
    "decreaseIndentPattern": "^\\s*</"
  }
}
